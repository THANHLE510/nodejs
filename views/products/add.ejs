<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Login System in Node.js Express</title>
</head>
<body>

<div class="container">
    <a href="/">Home</a> |
    <a href="/add">Add New User</a> |
    
</div>

<form action="/add" method="post" name="form1">
    <table width="25%" border="0">
        <tr>
            <td>ProductCode</td>
            <td><input type="text" name="ProductCode" value="<%= ProductCode %>" /></td>
        </tr>
        <tr>
            <td>ProductName</td>
            <td><input type="text" name="ProductName"  value="<%= ProductName %>" /></td>
        </tr>
        <tr>
            <td>ProductData</td>
            <td><input type="date" name="ProductData" value="<%= ProductData %>" /></td>
        </tr>
        <tr>
            <td>ProductOriginPrice</td>
            <td><input type="text" name="ProductOriginPrice" value="<%= ProductOriginPrice %>" /></td>
        </tr>
        <tr>
            <td>Quantity</td>
            <td><input type="text" name="Quantity" value="<%= Quantity %>" /></td>
        </tr>
        <tr>
            <td>ProductStoreCode</td>
            <td><input type="text" name="ProductStoreCode" value="<%= ProductStoreCode %>" /></td>
        </tr>
        
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="Add" /></td>
        </tr>

    </table>
</form>

</body>
